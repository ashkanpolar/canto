<body id="{{ page_title | handle }}" class="{% if customer %}customer-logged-in {% endif %}template-{{ template | replace: '.', '-' | truncatewords: 1, '' | handle }}" >

<!-- MOBILE NAV BEGINS -->

  <div id="NavDrawer" class="drawer drawer--left">
    <div class="drawer__header">
      <div class="drawer__title h3">{{ 'layout.drawers.browse' | t }}</div>
      <div class="drawer__close js-drawer-close">
        <button type="button" class="icon-fallback-text">
          <span class="icon icon-x" aria-hidden="true"></span>
          <span class="fallback-text">{{ 'layout.drawers.close_menu' | t }}</span>
        </button>
      </div>
    </div>
    <!-- begin mobile-nav -->
    <ul class="mobile-nav">
      <li class="mobile-nav__item mobile-nav__search">
        {% include 'search-bar' %}
      </li>
      {% for link in navigation.main-menu.links %}
        {% assign child_list_handle = link.url | handleize %}
        {% if navigation[child_list_handle].links != blank %}
          <li class="mobile-nav__item{% if link.active %} mobile-nav__item--active{% endif %}" aria-haspopup="true">
            <div class="mobile-nav__has-sublist">
              <a  class="mobile-nav__link">{{ link.name }}</a>
              <div class="mobile-nav__toggle">
                <button type="button" class="icon-fallback-text mobile-nav__toggle-open">
                  <span class="icon icon-plus" aria-hidden="true"></span>
                  <span class="fallback-text">See More</span>
                </button>
                <button type="button" class="icon-fallback-text mobile-nav__toggle-close">
                  <span class="icon icon-minus" aria-hidden="true"></span>
                  <span class="fallback-text">{{ 'cart.general.close_cart' | t | json }}</span>
                </button>
              </div>
            </div>
            <ul class="mobile-nav__sublist">
              {% for childlink in navigation[child_list_handle].links %}
                <li class="mobile-nav__item {% if childlink.active %} mobile-nav__item--active{% endif %}">
                  <a href="{{ childlink.url }}" class="mobile-nav__link">{{ childlink.name | escape }}</a>
                </li>
              {% endfor %}
            </ul>
          </li>
        {% else %}
          <li class="mobile-nav__item{% if link.active %} mobile-nav__item--active{% endif %}">
            <a href="{{ link.url }}" class="mobile-nav__link">{{ link.name }}</a>
          </li>
        {% endif %}
      {% endfor %}
    {% if customer %}
      <li class="mobile-nav__item">
        <a href="{{ urls.account_logout }}">{{ 'layout.customer.log_out' | t }}</a>
      </li>
    {% else %}
      <li class="mobile-nav__item">
        <a href="{{ urls.account_login }}">{{ 'layout.customer.log_in' | t }}</a>
      </li>
      <li class="mobile-nav__item">
        <a href="{{ urls.account_register }}">{{ 'layout.customer.create_account' | t }}</a>
      </li>
    {% endif %}
    </ul>
    <!-- //mobile-nav -->
  </div>

  <div id="CartDrawer" class="drawer drawer--right">
    <div class="drawer__header">
      <div class="drawer__title h3">{{ 'cart.general.title' | t }}</div>
      <div class="drawer__close js-drawer-close">
        <button type="button" class="icon-fallback-text">
          <span class="icon icon-x" aria-hidden="true"></span>
          <span class="fallback-text">{{ 'cart.general.close_cart' | t | json }}</span>
        </button>
      </div>
    </div>
    <div id="CartContainer">

    <!--- cart items begin -->
    {% if cart.item_count > 0 %}
    <form action="{{ urls.cart_update }}" method="post" novalidate="" class="cart">
      <div class="ajaxcart__inner">
        {% for item in cart.items %}
        <div class="ajaxcart__product">
          <div class="ajaxcart__row">
            <div class="grid">
              <div class="grid__item one-quarter">
                <a href="{{ item.product.url }}" class="ajaxcart__product-image"><img src="{{ item | img_url: 'small' }}" alt=""></a>
              </div>
              <div class="grid__item three-quarters">
                <p>
                  <a href="{{ item.product.url }}" class="ajaxcart__product-name">{{ item.product.name }}</a>
                    {% if item.variant %}
                    <span class="ajaxcart__product-meta">{{ item.variant.title }}</span>
                    {% endif %}
                </p>

              </div>
            </div>
            <div class="grid--full">
                  <div class="grid__item one-third">
                   <a href="{{ urls.cart_edit }}?id={{ item.id }}&quantity=0" class="cart__remove" data-id="{{ item.id }}"><small>{{ 'cart.general.remove' | t }}</small></a>
                  </div>

                  <div class="grid__item one-third">
                    <div class="ajaxcart__qty">
                       <input type="number" name="items[{{ item.id }}][quantity]" id="updates_{{ item.id }}" value="{{ item.quantity }}" min="0" data-id="{{ item.id }}">
                    </div>
                  </div>
                  <div class="grid__item one-third text-right">
                    {{ item.price | money }}
                  </div>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
      <div class="ajaxcart__footer">
        <div class="grid--full">
          <div class="grid__item two-thirds">
            <p>{{ 'cart.label.total' | t }}</p>
          </div>
          <div class="grid__item one-third text-right">
            <p>{{ cart.total_price | money }}</p>
          </div>
        </div>
        <p class="text-center">{{ 'cart.general.shipping_at_checkout' | t }}</p>

        <button type="submit" class="btn btn--full btn--secondary update-cart" name="update" style="margin-bottom:10px;">
          {{ 'cart.general.update' | t }}
        </button>

        <button type="submit" class="btn btn--full cart__checkout" name="checkout">
          {{ 'cart.general.checkout' | t }}
        </button>
      </div>
    </form>

    {% else %}

    {{ 'cart.general.empty' | t }}

    {% endif %}

    <!-- cart ends -->

    </div>
  </div>

<!-- END MOBILE NAV  -->

<header class="site-header{% if template == 'index' %} transparent{% endif %}" role="banner">
  <div class="menu-toggle">
    <button type="button" class="toggle js-drawer-open-left" aria-controls="NavDrawer" aria-expanded="false">
      <span class="icon" aria-hidden="true"></span>
      <span class="fallback-text">{{ 'layout.navigation.menu' | t }}</span>
    </button>
  </div>
  <div class="site-branding">
    {% if template == 'index' %}
      <h1 itemscope itemtype="http://schema.org/Organization">
    {% else %}
      <div itemscope itemtype="http://schema.org/Organization">
    {% endif %}
      {% if settings.logo_use_image %}
        <a href="/" itemprop="url">
          <img src="{{ 'logo.png' | asset_url }}" alt="{{ store.name }}" itemprop="logo">
        </a>
      {% else %}
        <a href="/" itemprop="url">{{ store.name }}</a>
      {% endif %}
    {% if template == 'index' %}
      </h1>
    {% else %}
      </div>
    {% endif %}
  </div>
  <nav class="nav-bar" role="navigation">
    <!-- begin site-nav -->
    {% include 'site-nav' %}
    <!-- /site-nav -->
  </nav>
  <div class="header-search">
    {% include 'search-bar' %}
  </div>
  <div class="cart-toggle">
    <a href="{{ urls.cart }}" class="toggle js-drawer-open-right" aria-controls="CartDrawer" aria-expanded="false">
      <span class="icon" aria-hidden="true"></span>
      <span class="text">Shopping Bag</span>
    </a>
  </div>
  {% comment %}
  <!-- Remove cart-link -->
  <div class="cart-link">
    <a href="{{ urls.cart }}" class="js-drawer-open-right" aria-controls="CartDrawer" aria-expanded="false">
      <span class="link-icon">
        <span class="icon" aria-hidden="true"></span>
      </span>
      {{ 'layout.cart.title' | t }}
      <!-- Remove cart details -->
      (<span id="CartCount">{{ cart.item_count }}</span>
      {{ 'layout.cart.items_count' | t: count: cart.item_count }}
      <span id="CartCost">{{ cart.total_price | money }}</span>)

    </a>

    <!-- Hide customer login/logout -->
    <div>
      {% if customer %}
        <a href="{{ urls.account_logout }}">{{ 'layout.customer.log_out' | t}}</a>
      {% else %}
        <a href="{{ urls.account_login }}">{{ 'layout.customer.log_in' | t}}</a>
        | <a href="{{ urls.account_register }}">{{ 'layout.customer.create_account' | t}}</a>
      {% endif %}
    </div>
  </div>
  {% endcomment %}
</header>



<main class="main-content" role="main">

    {{ content_for_layout }}

</main>

  {% include 'footer' %}


  {{ 'fastclick.min.js' | asset_url | script_tag }}
  {{ 'timber.js' | asset_url | script_tag }}

</body>
</html>
